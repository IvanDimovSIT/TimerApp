<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCountdownTimer"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progCountdown"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginTop="45dp"
        android:max="100"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="@+id/txtCountdownTimer"
        app:layout_constraintStart_toStartOf="@+id/txtCountdownTimer"
        app:layout_constraintTop_toTopOf="@+id/txtCountdownTimer" />
</androidx.constraintlayout.widget.ConstraintLayout>