<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtTimerSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <EditText
        android:id="@+id/editAddCountdownMinutes"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="Минути"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtTimerSeparator"
        app:layout_constraintEnd_toStartOf="@+id/txtTimerSeparator"
        app:layout_constraintTop_toTopOf="@+id/txtTimerSeparator" />

    <EditText
        android:id="@+id/editAddCountdownSecconds"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:hint="Секунди"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtTimerSeparator"
        app:layout_constraintStart_toEndOf="@+id/txtTimerSeparator"
        app:layout_constraintTop_toTopOf="@+id/txtTimerSeparator" />

    <TextView
        android:id="@+id/txtCountdownDurationDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Продължителност"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTimerSeparator"
        app:layout_constraintEnd_toEndOf="@+id/txtTimerSeparator"
        app:layout_constraintStart_toStartOf="@+id/txtTimerSeparator" />
</androidx.constraintlayout.widget.ConstraintLayout>